{
    "name": "flus/flus",
    "description": "Collect, organise, comment on and share links from around the Web.",
    "type": "project",
    "license": "AGPL-3.0",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "SpiderBits\\": "lib/SpiderBits/src/"
        },
        "files": [
            "src/utils/view_helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.2",
        "ext-intl": "*",
        "ext-gettext": "*",
        "ext-pcntl": "*",
        "ext-gd": "*",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "flus/minz": "dev-main",
        "erusev/parsedown": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "squizlabs/php_codesniffer": "^3.5",
        "fakerphp/faker": "^1.17",
        "phpstan/phpstan": "^1.10",
        "rector/rector": "^1.2"
    }
}

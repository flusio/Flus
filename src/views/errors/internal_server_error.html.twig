{% extends 'layouts/error.html.twig' %}

{% block title %}{{ t('Something bad happened') }}{% endblock %}

{% block error %}
    {{ include('errors/_error.html.twig') }}
{% endblock %}

{% block body %}
    <h1>{{ t('Something bad happened') }}</h1>

    <p>
        {{ t('An error occurred during the processing of your request. In any case, this error is not your fault.') }}
    </p>

    <a class="button button--primary button--big button--animated" href="{{ url('home') }}">
        {{ icon('arrow-left') }}
        {{ t('Back to the home page') }}
    </a>
{% endblock %}

{% block illustration %}
    <img
        class="illustration illustration--centered"
        alt=""
        src="{{ url_static('static/illustrations/server-down.svg') }}"
        height="250"
    >
{% endblock %}

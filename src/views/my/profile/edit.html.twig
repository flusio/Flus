{% extends 'layouts/modal.html.twig' %}

{% block title %}{{ t('Profile') }}{% endblock %}

{% block body %}
    <div class="wrapper wrapper--small wrapper--center flow flow--large">
        <form method="post" action="{{ url('update profile') }}" class="flow">
            {{ include('alerts/_error.html.twig', { message: form.error('@base') }) }}

            <div class="form-group">
                <label for="username">
                    {{ t('Your name') }}
                    <span class="label__help">
                        {{ t('(public, max. %d characters)', [form.username_max_length]) }}
                    </span>
                </label>

                {% if form.isInvalid('username') %}
                    <p id="username-error" class="form-group__error">
                        {{ t('Error:') }}
                        {{ form.error('username') }}
                    </p>
                {% endif %}

                <input
                    type="text"
                    name="username"
                    id="username"
                    value="{{ form.username }}"
                    maxlength="{{ form.username_max_length }}"
                    required
                    autocomplete="nickname"
                    {% if form.isInvalid('username') %}
                        aria-errormessage="username-error"
                        aria-invalid="true"
                    {% endif %}
                >
            </div>

            <div class="text--center">
                <button type="submit" class="button--primary button--big">
                    {{ t('Save changes') }}
                </button>
            </div>

            <input type="hidden" name="csrf_token" value="{{ csrf_token(form) }}">
        </form>
    </div>
{% endblock %}
